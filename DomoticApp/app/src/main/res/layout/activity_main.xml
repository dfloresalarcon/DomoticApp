<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/title"
                android:text="DOMOTICAPP"
                android:textSize="35dp"
                android:textStyle="bold"
                android:fontFamily="courier news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginLeft="30dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

        </LinearLayout>


        <ScrollView
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true">

            <TableLayout
                android:layout_width="300dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true">

                <Button
                    android:text="Temperatura"
                    android:id="@+id/Temperatura"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="#ffff4b4d" />

                <Button
                    android:text="Humedad"
                    android:id="@+id/Humedad"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="#ff5dcdff" />

                <Button
                    android:text="Luz"
                    android:id="@+id/Luz"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="#fffff14f" />

                <Button
                    android:text="Portal"
                    android:id="@+id/Portal"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="#FF7A8EFF" />

                <Button
                    android:text="Salir"
                    android:id="@+id/Salir"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="#FFFFB709" />

                <Button
                    android:text="Ayuda"
                    android:id="@+id/Ayuda"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="#FF3EFF77" />

                <Button
                    android:text="Acerca de"
                    android:id="@+id/Acercade"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="#FFA844FF" />

            </TableLayout>
        </ScrollView>

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"/>

    </RelativeLayout>
</RelativeLayout>
